{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "allowJs": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.story.js",
    "**/*.story.tsx",
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}